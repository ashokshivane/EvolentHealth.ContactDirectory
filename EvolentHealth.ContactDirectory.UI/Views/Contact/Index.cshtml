@model List<ContactModels>

@{
    ViewData["Title"] = "Index";
}

<h1>Contact List</h1>

<p>
    
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.lastName</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            @if (item.Status)
            {
                <td>Active</td>
            }
            else
            {
        <td>In-Active</td>
            }

            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id  }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
